<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TimeSea</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
    />
    <style>
      body {
        background-color: #fff;
        color: #000;
      }
      .navbar {
        background-color: #f8f9fa;
        border-bottom: 1px solid #ddd;
      }
      .navbar-brand {
        color: #000;
        font-weight: bold;
      }
      .navbar-toggler-icon {
        filter: invert(0);
      }
      .navbar-nav .nav-link {
        color: #000;
      }
      .card-login {
        max-width: 400px;
        margin-top: 100px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .card-title {
        color: #000;
      }
      .form-control {
        background-color: #fff;
        border: 1px solid #ddd;
        color: #000;
      }
      .btn-primary {
        background-color: #000;
        border: none;
        color: #fff;
      }
      .btn-primary:hover {
        background-color: #333;
      }
      .btn-primary:active,
      .btn-primary:focus {
        background-color: #000 !important;
        box-shadow: none !important;
      }
      .text-danger {
        color: #d9534f !important;
      }
      .hover-effect:hover {
        transform: scale(1.05);
        transition: all 0.3s ease-in-out;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <a class="navbar-brand" href="/">TimeSea</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <!-- Additional nav items can be added here if needed -->
          </ul>
        </div>
      </div>
    </nav>
    <main>
      <section class="content-main mt-80 mb-80">
        <div class="card mx-auto card-login hover-effect">
          <div class="card-body">
            <h4 class="card-title mb-4">Enter New Password</h4>
            <form
              action="/resetPassword"
              method="post"
              onsubmit="return validateForm()"
            >
              <% if (locals.message) { %>
              <span class="text-danger"><%= message %></span>
              <% } %>
              <div class="mb-3">
                <input
                  class="form-control"
                  placeholder="New Password"
                  type="password"
                  name="password1"
                  id="password1"
                  required
                />
                <span id="passwordError" class="text-danger"></span>
              </div>
              <div class="mb-3">
                <input
                  class="form-control"
                  placeholder="Confirm Password"
                  type="password"
                  name="password2"
                  id="password2"
                  required
                />
              </div>
              <div class="mb-3">
                <input
                  class="form-control"
                  type="hidden"
                  name="email"
                  value="<%= email %>"
                  required
                />
              </div>
              <div class="mb-4">
                <button type="submit" class="btn btn-primary w-100">
                  Reset Password
                </button>
              </div>
            </form>
            <script>
              function validateForm() {
                var password1 = document.getElementById("password1").value;
                var password2 = document.getElementById("password2").value;
                var regex = /^(?=.*\d)(?=.*[a-zA-Z]).{8,}$/;
                var passwordError = document.getElementById("passwordError");

                if (!regex.test(password1)) {
                  passwordError.textContent =
                    "Password must contain at least one digit, one letter, and be at least 8 characters long.";
                  return false;
                } else {
                  passwordError.textContent = ""; // Clear any previous error messages
                }

                if (password1 !== password2) {
                  passwordError.textContent = "Passwords do not match.";
                  return false;
                } else {
                  passwordError.textContent = ""; // Clear any previous error messages
                }

                // If validation passes, the form will be submitted
                return true;
              }
            </script>
          </div>
        </div>
      </section>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="assetsb/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assetsb/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assetsb/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="assetsb/js/main.js" type="text/javascript"></script>
  </body>
</html>
